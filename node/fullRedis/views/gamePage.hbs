<!doctype html>
<html>
  <head>
    <title>Game app</title>
    <link rel="stylesheet" href="css/bootstrap.css" />
  </head>
  <body>
    <div class="jumbotron text-center" >
      <div>
        <h1>Cow Bull Game</h1><br>
        <h3 class="text-success">Guess the {{digit}} digit number</h3><br>
        <form action="/exec" method="post">
          <label>Number: </label>
          <input id=number type="number" name="number">  <br />
          <input id=submit type="submit" name= "form" value="Submit" />
        </form>
      </div> <br>
      <h5 class="text-info">{{text}}</h5>
      <div>
        <ul>{{list}}</ul>
      </div>
    </div>
  </body>
</html>
